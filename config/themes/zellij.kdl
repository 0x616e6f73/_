themes {
    custom {
        fg "#E6D7C3" // Base bone white
        bg "#0a0a0a" // Dark background
        black "#0a0a0a" // Base dark
        red "#E5524F" // Deep coral (from constants)
        green "#D4B483" // Warm gold (from variables)
        yellow "#FFC799" // Peach accent
        blue "#7C89CD" // Muted blue (from functions)
        magenta "#FF8080" // Soft red (from keywords)
        cyan "#99FFE4" // Mint (from strings)
        white "#E6D7C3" // Bone white
        orange "#FF7300" // Burnt orange (from storage)
    }
}

ui {
    pane_frames {
        rounded_corners false
        hide_session_name true
    }
}

themes {
    custom {
        tab_bar {
            background "#0a0a0a00"
            active_tab {
                bg_color "#FF8080" // Soft red for active tab
                fg_color "#0a0a0a"
            }
            inactive_tab {
                bg_color "#0a0a0a"
                fg_color "#E6D7C3"
            }
        }
        pane_frames {
            active {
                bg_color "#FF8080" // Soft red for active frame
                fg_color "#0a0a0a"
            }
            inactive {
                bg_color "#0a0a0a"
                fg_color "#E6D7C3"
            }
        }
        status_bar {
            background "#0a0a0a"
            text "#E6D7C3"
        }
    }
}
